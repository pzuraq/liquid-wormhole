{{#if this.hasSend}}
  {{#if (has-block)}}
    {{#component
      (ensure-safe-component @send)
      id=this.wormholeId
      class=(concat this.wormholeClass " liquid-wormhole-element") as |details|
    }}
      {{yield details}}
    {{/component}}
  {{else}}
    {{component
      (ensure-safe-component @send)
      id=this.wormholeId
      class=(concat this.wormholeClass " liquid-wormhole-element")
    }}
  {{/if}}
{{else}}
  <div id={{this.wormholeId}} class="{{this.wormholeClass}} liquid-wormhole-element">
    {{yield}}
  </div>
{{/if}}